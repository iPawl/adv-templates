mixin b-product (list)
    -if (list)
        -list.forEach(function(item, i){
            .b-product.js-widget(onclick="return {widget: 'product', options: {id:#{(new Date().getMilliseconds())+i}}}")
                .b-product__photo
                .b-product__description
                    h3.b-product__title #{item.title}
                    p.b-product__text #{item.description}
                    a.b-product__add-to-cart(href='#') В корзину
        -})
